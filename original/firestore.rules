rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regra para a coleção content
    // Para desenvolvimento: permite leitura pública, escrita autenticada
    match /content/{document=**} {
      allow read: if true; // Qualquer um pode ler
      allow write: if request.auth != null; // Apenas usuários autenticados podem escrever
    }
    
    // Para PRODUÇÃO: descomente as regras abaixo e comente as acima
    // match /content/{document=**} {
    //   allow read: if true;
    //   allow write: if request.auth.token.admin == true; // Apenas admins
    // }
  }
}
